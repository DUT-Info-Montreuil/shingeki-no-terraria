                  <Button fx:id="exit" alignment="CENTER" graphicTextGap="100.0" layoutX="588.0" layoutY="429.0" mnemonicParsing="false" onAction="#sortirJeu" textAlignment="CENTER">
                     <graphic>
                        <ImageView fx:id="imageExit" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../image/exitGame.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Label fx:id="pause" alignment="CENTER" layoutX="577.0" layoutY="257.0" prefHeight="69.0" prefWidth="56.0" textFill="#d91414" />
                  <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="596.0" layoutY="267.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/pause.png" />
                     </image>
                  </ImageView>
               </children>
            </Pane>
         </children>
      </Pane>
   </center>
