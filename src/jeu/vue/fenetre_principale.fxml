            <TilePane fx:id="afficherObjet" prefColumns="10" />
            <Pane fx:id="panePause" layoutX="-1.0" layoutY="-2.0" opacity="0.75" prefHeight="736.0" prefWidth="1280.0" style="-fx-background-color: black;">
